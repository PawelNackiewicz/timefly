---
import "@/styles/globals.css";
import { ResetPasswordWrapper } from "@/components/auth/AuthWrapper";

// If user is already logged in, redirect to dashboard
if (Astro.locals.session && Astro.locals.admin) {
  return Astro.redirect("/dashboard");
}

// Check if we have reset token parameters (user clicked email link)
const url = new URL(Astro.request.url);
const hasResetToken =
  url.searchParams.has("token_hash") && url.searchParams.has("type");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="TimeTrack - Reset Your Password" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Reset Password - TimeTrack</title>
  </head>
  <body>
    <ResetPasswordWrapper hasResetToken={hasResetToken} client:load />
  </body>
</html>
