---
import "@/styles/globals.css";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Badge } from "@/components/ui/badge";
import {
  ClockIcon,
  UsersIcon,
  TrendingUpIcon,
  ShieldCheckIcon,
  ZapIcon,
  CheckIcon,
} from "lucide-react";
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="TimeTrack - Nowoczesny system zarządzania czasem pracy pracowników"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>TimeTrack - System Zarządzania Czasem Pracy</title>
  </head>
  <body>
    <!-- Navigation -->
    <nav
      class="fixed top-0 w-full bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 z-50 border-b"
    >
      <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <div class="flex items-center space-x-2">
            <div class="rounded-lg bg-primary p-2">
              <ClockIcon class="h-6 w-6 text-primary-foreground" />
            </div>
            <span class="text-xl font-bold">TimeTrack</span>
          </div>
          <div class="flex items-center space-x-4">
            <a
              href="#features"
              class="text-sm font-medium hover:text-primary transition-colors hidden sm:inline-block"
            >
              Funkcje
            </a>
            <a
              href="#pricing"
              class="text-sm font-medium hover:text-primary transition-colors hidden sm:inline-block"
            >
              Cennik
            </a>
            <a
              href="#contact"
              class="text-sm font-medium hover:text-primary transition-colors hidden sm:inline-block"
            >
              Kontakt
            </a>
            <a href="/login">
              <Button variant="default" size="sm"> Zaloguj się </Button>
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section
      class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-background to-muted"
    >
      <div class="container max-w-7xl mx-auto">
        <div
          class="flex flex-col lg:flex-row items-center justify-between gap-12"
        >
          <div class="flex-1 space-y-6 text-center lg:text-left">
            <div class="inline-block">
              <Badge variant="secondary">
                <ZapIcon class="h-3 w-3 mr-1" />
                <span>Nowa Wersja 2.0</span>
              </Badge>
            </div>
            <h1
              class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight"
            >
              Zarządzaj czasem pracy
              <span class="text-primary block">prościej niż kiedykolwiek</span>
            </h1>
            <p class="text-lg sm:text-xl text-muted-foreground max-w-2xl">
              TimeTrack to nowoczesny system do zarządzania czasem pracy
              pracowników. Automatyzuj rejestrację czasu, generuj raporty i
              zwiększ produktywność zespołu.
            </p>
            <div
              class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
            >
              <a href="/login">
                <Button size="lg" class="w-full sm:w-auto">
                  Rozpocznij bezpłatnie
                </Button>
              </a>
              <a href="#contact">
                <Button size="lg" variant="outline" class="w-full sm:w-auto">
                  Skontaktuj się z nami
                </Button>
              </a>
            </div>
          </div>
          <div class="flex-1 w-full max-w-lg">
            <div class="relative">
              <div
                class="absolute inset-0 bg-gradient-to-r from-primary/20 to-purple-600/20 blur-3xl"
              >
              </div>
              <Card class="relative">
                <CardHeader>
                  <div class="flex items-center justify-between">
                    <CardTitle>Dashboard</CardTitle>
                    <span
                      class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold bg-green-500/10 text-green-500 border-green-500/20"
                    >
                      Live
                    </span>
                  </div>
                </CardHeader>
                <CardContent class="space-y-4">
                  <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-1">
                      <p class="text-sm text-muted-foreground">Pracownicy</p>
                      <p class="text-2xl font-bold">24</p>
                    </div>
                    <div class="space-y-1">
                      <p class="text-sm text-muted-foreground">Aktywni</p>
                      <p class="text-2xl font-bold">18</p>
                    </div>
                  </div>
                  <div class="space-y-2">
                    <div class="flex items-center justify-between text-sm">
                      <span class="text-muted-foreground">Godziny dziś</span>
                      <span class="font-medium">142.5 h</span>
                    </div>
                    <div class="h-2 w-full rounded-full bg-secondary">
                      <div
                        class="h-full rounded-full bg-primary"
                        style="width: 75%"
                      >
                      </div>
                    </div>
                  </div>
                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="container max-w-7xl mx-auto">
        <div class="text-center space-y-4 mb-16">
          <Badge variant="secondary">Funkcje</Badge>
          <h2 class="text-3xl sm:text-4xl font-bold">
            Wszystko czego potrzebujesz
          </h2>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
            TimeTrack oferuje kompletny zestaw narzędzi do efektywnego
            zarządzania czasem pracy
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <Card>
            <CardHeader>
              <div class="rounded-lg bg-primary/10 p-3 w-fit mb-2">
                <ClockIcon class="h-6 w-6 text-primary" />
              </div>
              <CardTitle>Rejestracja czasu</CardTitle>
              <CardDescription>
                Proste wejście/wyjście z pracy za pomocą PIN lub karty
              </CardDescription>
            </CardHeader>
          </Card>

          <Card>
            <CardHeader>
              <div class="rounded-lg bg-primary/10 p-3 w-fit mb-2">
                <UsersIcon class="h-6 w-6 text-primary" />
              </div>
              <CardTitle>Zarządzanie pracownikami</CardTitle>
              <CardDescription>
                Pełna kontrola nad kontami i uprawnieniami pracowników
              </CardDescription>
            </CardHeader>
          </Card>

          <Card>
            <CardHeader>
              <div class="rounded-lg bg-primary/10 p-3 w-fit mb-2">
                <TrendingUpIcon class="h-6 w-6 text-primary" />
              </div>
              <CardTitle>Raporty i statystyki</CardTitle>
              <CardDescription>
                Szczegółowe analizy czasu pracy i produktywności
              </CardDescription>
            </CardHeader>
          </Card>

          <Card>
            <CardHeader>
              <div class="rounded-lg bg-primary/10 p-3 w-fit mb-2">
                <ShieldCheckIcon class="h-6 w-6 text-primary" />
              </div>
              <CardTitle>Bezpieczeństwo</CardTitle>
              <CardDescription>
                Szyfrowanie danych i wielopoziomowa autoryzacja
              </CardDescription>
            </CardHeader>
          </Card>

          <Card>
            <CardHeader>
              <div class="rounded-lg bg-primary/10 p-3 w-fit mb-2">
                <ZapIcon class="h-6 w-6 text-primary" />
              </div>
              <CardTitle>Automatyzacja</CardTitle>
              <CardDescription>
                Automatyczne obliczanie nadgodzin i raportowanie
              </CardDescription>
            </CardHeader>
          </Card>

          <Card>
            <CardHeader>
              <div class="rounded-lg bg-primary/10 p-3 w-fit mb-2">
                <CheckIcon class="h-6 w-6 text-primary" />
              </div>
              <CardTitle>Integracje</CardTitle>
              <CardDescription>
                Łatwa integracja z systemami płacowymi i HR
              </CardDescription>
            </CardHeader>
          </Card>
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section id="pricing" class="py-20 px-4 sm:px-6 lg:px-8 bg-muted/50">
      <div class="container max-w-7xl mx-auto">
        <div class="text-center space-y-4 mb-16">
          <Badge variant="secondary">Cennik</Badge>
          <h2 class="text-3xl sm:text-4xl font-bold">
            Prosty i przejrzysty cennik
          </h2>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
            Wybierz plan dostosowany do wielkości Twojej firmy
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <!-- Starter Plan -->
          <Card>
            <CardHeader>
              <CardTitle>Starter</CardTitle>
              <CardDescription>Dla małych zespołów</CardDescription>
              <div class="mt-4">
                <span class="text-4xl font-bold">99 zł</span>
                <span class="text-muted-foreground">/miesiąc</span>
              </div>
            </CardHeader>
            <CardContent class="space-y-4">
              <ul class="space-y-3">
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Do 10 pracowników</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Podstawowe raporty</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Wsparcie email</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Aplikacja mobilna</span>
                </li>
              </ul>
              <Button class="w-full" variant="outline"> Wybierz plan </Button>
            </CardContent>
          </Card>

          <!-- Professional Plan -->
          <Card class="border-primary shadow-lg">
            <CardHeader>
              <div class="flex items-center justify-between">
                <CardTitle>Professional</CardTitle>
                <Badge variant="default">Popularne</Badge>
              </div>
              <CardDescription>Dla rosnących firm</CardDescription>
              <div class="mt-4">
                <span class="text-4xl font-bold">249 zł</span>
                <span class="text-muted-foreground">/miesiąc</span>
              </div>
            </CardHeader>
            <CardContent class="space-y-4">
              <ul class="space-y-3">
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Do 50 pracowników</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Zaawansowane raporty</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Wsparcie priorytetowe</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Integracje API</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Eksport danych</span>
                </li>
              </ul>
              <Button class="w-full"> Wybierz plan </Button>
            </CardContent>
          </Card>

          <!-- Enterprise Plan -->
          <Card>
            <CardHeader>
              <CardTitle>Enterprise</CardTitle>
              <CardDescription>Dla dużych organizacji</CardDescription>
              <div class="mt-4">
                <span class="text-4xl font-bold">Indywidualnie</span>
              </div>
            </CardHeader>
            <CardContent class="space-y-4">
              <ul class="space-y-3">
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Bez limitu pracowników</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Dedykowany account manager</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Wsparcie 24/7</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Własna instalacja</span>
                </li>
                <li class="flex items-center">
                  <CheckIcon class="h-5 w-5 text-primary mr-2" />
                  <span>Customizacja</span>
                </li>
              </ul>
              <Button class="w-full" variant="outline"> Skontaktuj się </Button>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="container max-w-3xl mx-auto">
        <div class="text-center space-y-4 mb-12">
          <Badge variant="secondary">Kontakt</Badge>
          <h2 class="text-3xl sm:text-4xl font-bold">Skontaktuj się z nami</h2>
          <p class="text-lg text-muted-foreground">
            Masz pytania? Chętnie pomożemy!
          </p>
        </div>

        <Card>
          <CardHeader>
            <CardTitle>Wyślij wiadomość</CardTitle>
            <CardDescription> Odpowiemy w ciągu 24 godzin </CardDescription>
          </CardHeader>
          <CardContent>
            <form class="space-y-4" id="contact-form">
              <div class="grid md:grid-cols-2 gap-4">
                <div class="space-y-2">
                  <Label htmlFor="name">Imię i nazwisko</Label>
                  <Input
                    id="name"
                    name="name"
                    placeholder="Jan Kowalski"
                    required
                  />
                </div>
                <div class="space-y-2">
                  <Label htmlFor="email">Email</Label>
                  <Input
                    id="email"
                    name="email"
                    type="email"
                    placeholder="jan@firma.pl"
                    required
                  />
                </div>
              </div>
              <div class="space-y-2">
                <Label htmlFor="company">Firma (opcjonalnie)</Label>
                <Input id="company" name="company" placeholder="Nazwa firmy" />
              </div>
              <div class="space-y-2">
                <Label htmlFor="message">Wiadomość</Label>
                <Textarea
                  id="message"
                  name="message"
                  placeholder="Jak możemy Ci pomóc?"
                  rows={5}
                  required
                />
              </div>
              <Button type="submit" class="w-full"> Wyślij wiadomość </Button>
            </form>
          </CardContent>
        </Card>

        <div class="mt-12 grid md:grid-cols-3 gap-6 text-center">
          <div class="space-y-2">
            <h3 class="font-semibold">Email</h3>
            <p class="text-sm text-muted-foreground">kontakt@timetrack.pl</p>
          </div>
          <div class="space-y-2">
            <h3 class="font-semibold">Telefon</h3>
            <p class="text-sm text-muted-foreground">+48 123 456 789</p>
          </div>
          <div class="space-y-2">
            <h3 class="font-semibold">Godziny pracy</h3>
            <p class="text-sm text-muted-foreground">Pn-Pt: 9:00 - 17:00</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="border-t py-12 px-4 sm:px-6 lg:px-8 bg-muted/50">
      <div class="container max-w-7xl mx-auto">
        <div class="grid md:grid-cols-4 gap-8">
          <div class="space-y-4">
            <div class="flex items-center space-x-2">
              <div class="rounded-lg bg-primary p-2">
                <ClockIcon class="h-5 w-5 text-primary-foreground" />
              </div>
              <span class="font-bold">TimeTrack</span>
            </div>
            <p class="text-sm text-muted-foreground">
              Nowoczesny system zarządzania czasem pracy pracowników.
            </p>
          </div>
          <div class="space-y-3">
            <h4 class="font-semibold">Produkt</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>
                <a href="#features" class="hover:text-primary transition-colors"
                  >Funkcje</a
                >
              </li>
              <li>
                <a href="#pricing" class="hover:text-primary transition-colors"
                  >Cennik</a
                >
              </li>
              <li>
                <a href="/login" class="hover:text-primary transition-colors"
                  >Zaloguj się</a
                >
              </li>
            </ul>
          </div>
          <div class="space-y-3">
            <h4 class="font-semibold">Firma</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>
                <a href="#" class="hover:text-primary transition-colors"
                  >O nas</a
                >
              </li>
              <li>
                <a href="#contact" class="hover:text-primary transition-colors"
                  >Kontakt</a
                >
              </li>
              <li>
                <a href="#" class="hover:text-primary transition-colors">Blog</a
                >
              </li>
            </ul>
          </div>
          <div class="space-y-3">
            <h4 class="font-semibold">Prawne</h4>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>
                <a href="#" class="hover:text-primary transition-colors"
                  >Polityka prywatności</a
                >
              </li>
              <li>
                <a href="#" class="hover:text-primary transition-colors"
                  >Regulamin</a
                >
              </li>
              <li>
                <a href="#" class="hover:text-primary transition-colors"
                  >Cookies</a
                >
              </li>
            </ul>
          </div>
        </div>
        <div
          class="border-t mt-8 pt-8 text-center text-sm text-muted-foreground"
        >
          <p>&copy; 2025 TimeTrack. Wszelkie prawa zastrzeżone.</p>
        </div>
      </div>
    </footer>

    <script>
      // Simple contact form handling
      const form = document.getElementById("contact-form");
      if (form) {
        form.addEventListener("submit", async (e) => {
          e.preventDefault();
          const formData = new FormData(form as HTMLFormElement);
          const data = Object.fromEntries(formData);

          console.log("Form submitted:", data);
          alert("Dziękujemy za wiadomość! Skontaktujemy się wkrótce.");
          (form as HTMLFormElement).reset();
        });
      }
    </script>
  </body>
</html>
