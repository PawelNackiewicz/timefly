---
import "@/styles/globals.css";
import Layout from "../../layouts/Layout.astro";
import WorkTimeReporting from "@/components/admin/WorkTimeReporting";
import { requireAuth } from "@/lib/utils/auth-guard";

// Protect this page - redirect to login if not authenticated
const redirect = requireAuth(Astro);
if (redirect) return redirect;
---

<Layout title="TimeTrack - Work Time Reports">
  <main class="min-h-screen bg-slate-50 dark:bg-slate-900">
    <WorkTimeReporting client:load />
  </main>
</Layout>
