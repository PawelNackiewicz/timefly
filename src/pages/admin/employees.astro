---
import "@/styles/globals.css";
import Layout from "../../layouts/Layout.astro";
import EmployeeManagement from "@/components/admin/EmployeeManagement";
import { requireAuth } from "@/lib/utils/auth-guard";
import EmployeeManagementWrapper from "@/components/admin/EmployeeManagementWrapper";

// Protect this page - redirect to login if not authenticated
const redirect = requireAuth(Astro);
if (redirect) return redirect;
---

<Layout title="TimeTrack - Employee Management">
  <main class="min-h-screen bg-slate-50 dark:bg-slate-900">
    <EmployeeManagementWrapper client:only="react" />
  </main>
</Layout>
